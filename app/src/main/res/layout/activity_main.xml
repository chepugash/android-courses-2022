<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="52dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_profile_inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="152dp" />

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_search"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_bottom" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_reels"
        app:layout_constraintStart_toEndOf="@id/iv_home"
        app:layout_constraintTop_toTopOf="@id/gl_bottom" />

    <ImageView
        android:id="@+id/iv_reels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reels"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_likes"
        app:layout_constraintStart_toEndOf="@id/iv_search"
        app:layout_constraintTop_toTopOf="@id/gl_bottom" />

    <ImageView
        android:id="@+id/iv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_profile_btm"
        app:layout_constraintStart_toEndOf="@id/iv_reels"
        app:layout_constraintTop_toTopOf="@id/gl_bottom" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_btm"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_likes"
        app:layout_constraintTop_toTopOf="@id/gl_bottom"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/scala0"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/nickname"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_bold"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintEnd_toStartOf="@id/more"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_expand_more"
        app:layout_constraintBottom_toBottomOf="@id/tv_nickname"
        app:layout_constraintStart_toEndOf="@id/tv_nickname"
        app:layout_constraintTop_toTopOf="@id/tv_nickname" />

    <ImageView
        android:id="@+id/iv_add_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_add_plus"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintEnd_toStartOf="@id/iv_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@id/gl_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/gl_profile_inf"
        app:layout_constraintEnd_toStartOf="@id/tv_publications_counter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/scala0" />

    <TextView
        android:id="@+id/tv_publications_counter"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/publications_counter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans_bold"
        app:layout_constraintBottom_toTopOf="@id/tv_publications"
        app:layout_constraintEnd_toStartOf="@id/tv_followers_counter"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_publications"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/publications"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintBottom_toBottomOf="@id/gl_profile_inf"
        app:layout_constraintEnd_toEndOf="@id/tv_publications_counter"
        app:layout_constraintStart_toStartOf="@id/tv_publications_counter"
        app:layout_constraintTop_toBottomOf="@id/tv_publications_counter" />

    <TextView
        android:id="@+id/tv_followers_counter"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/followers_counter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/noto_sans_bold"
        app:layout_constraintBottom_toTopOf="@id/tv_followers"
        app:layout_constraintEnd_toStartOf="@id/tv_followings_counter"
        app:layout_constraintStart_toEndOf="@id/tv_publications_counter"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_followers"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/followers"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintBottom_toBottomOf="@id/gl_profile_inf"
        app:layout_constraintEnd_toEndOf="@id/tv_followers_counter"
        app:layout_constraintStart_toStartOf="@id/tv_followers_counter"
        app:layout_constraintTop_toBottomOf="@id/tv_followers_counter" />

    <TextView
        android:id="@+id/tv_followings_counter"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/noto_sans_bold"
        android:text="@string/followings_counter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/tv_followings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_followers_counter"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_followings"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/followings"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintBottom_toBottomOf="@id/gl_profile_inf"
        app:layout_constraintEnd_toEndOf="@id/tv_followings_counter"
        app:layout_constraintStart_toStartOf="@id/tv_followings_counter"
        app:layout_constraintTop_toBottomOf="@id/tv_followings_counter" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/noto_sans"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/gl_profile_inf" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/grey"
        android:text="@string/edit"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans_bold"
        app:layout_constraintBottom_toTopOf="@id/iv_actuals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_description" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_actuals"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:padding="1dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/tv_actuals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/scala1"
        app:strokeColor="@color/grey"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tv_actuals"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:text="@string/actuals"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintEnd_toEndOf="@id/iv_actuals"
        app:layout_constraintStart_toStartOf="@id/iv_actuals"
        app:layout_constraintTop_toBottomOf="@id/iv_actuals" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_new_actuals"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:padding="1dp"
        android:scaleType="center"
        app:layout_constraintStart_toEndOf="@id/iv_actuals"
        app:layout_constraintTop_toBottomOf="@id/btn_edit"
        app:shapeAppearanceOverlay="@style/circle"
        app:srcCompat="@drawable/ic_plus"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/tv_new_actuals"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:text="@string/new_actuals"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        app:layout_constraintEnd_toEndOf="@id/iv_new_actuals"
        app:layout_constraintStart_toStartOf="@id/iv_new_actuals"
        app:layout_constraintTop_toBottomOf="@id/iv_new_actuals" />

    <ImageView
        android:id="@+id/iv_apps"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_apps"
        app:layout_constraintEnd_toStartOf="@id/iv_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_new_actuals" />

    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_person_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_apps"
        app:layout_constraintTop_toBottomOf="@id/tv_new_actuals" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/iv_apps"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv_photo1"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:src="@drawable/scala2"
        app:layout_constraintTop_toTopOf="@id/divider"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_photo2"
        app:layout_constraintHorizontal_chainStyle="spread_inside"/>

    <ImageView
        android:id="@+id/iv_photo2"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:src="@drawable/scala3"
        app:layout_constraintTop_toTopOf="@id/divider"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_photo1"
        app:layout_constraintEnd_toStartOf="@id/iv_photo3"/>

    <ImageView
        android:id="@+id/iv_photo3"
        android:layout_width="118dp"
        android:layout_height="118dp"
        android:src="@drawable/scala4"
        app:layout_constraintTop_toTopOf="@id/divider"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_photo2"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>